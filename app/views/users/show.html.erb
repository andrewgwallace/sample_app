<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		 <section class="user_info">
		   <h1>
		     <%= gravatar_for @user %>  <!-- Defined in the users_helper.rb file under helpers directory -->
		     <%= @user.name %>
		   </h1>
		</section>
	</aside>
	<!-- BEGIN Listing 11.23 -->
	<div class="col-md-8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
	<!-- END Listing 11.23 -->
</div>


