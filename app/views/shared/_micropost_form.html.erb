<!-- Listing 11.37 - The form partial for creating microposts.  Manually created file. -->
<%= form_for(@micropost, html: { multipart: true }) do |f| %> <!-- Listing 11.57 -->
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary" %>
	<!-- Listing 11.57 -->
	<span class="picture">
		<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %> <!-- Listing 11.62 -->
	</span>
<% end %>

<!-- BEGIN Listing 11.62 -->
<script type="text/javascript">
	$('#micropost_picture').bind('change', function() {
		size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alert('Maximum file size is 5MB. Please choose a smaller file.');
		}
	})
</script>
<!-- END Listing 11.62 -->

